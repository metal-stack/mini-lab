---
tenant:
  # Tenant name
  name: metal-stack

  certificate:
    requestAutoCert: false

  configuration:
    name: mini-lab

  configSecret:
    name: mini-lab
    accessKey: {{ minio_root_user }}
    secretKey: {{ minio_root_password }}

ingress:
  api:
    enabled: true
    annotations:
      nginx.ingress.kubernetes.io/proxy-body-size: 10m
    host: "{{ minio_dns_name }}"
